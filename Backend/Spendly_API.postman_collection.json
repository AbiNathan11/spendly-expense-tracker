{
    "info": {
        "name": "Spendly API",
        "description": "API collection for Spendly - Smart Expense Tracker",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "auth_token",
            "value": "your-supabase-jwt-token",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/health",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "health"
                    ]
                }
            }
        },
        {
            "name": "Envelopes",
            "item": [
                {
                    "name": "Get All Envelopes",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{auth_token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/envelopes",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "envelopes"
                            ]
                        }
                    }
                },
                {
                    "name": "Create Envelope",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{auth_token}}",
                                "type": "text"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Food\",\n  \"icon\": \"üçî\",\n  \"allocated_amount\": 5000,\n  \"month\": 12,\n  \"year\": 2025\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/envelopes",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "envelopes"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Expenses",
            "item": [
                {
                    "name": "Get All Expenses",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{auth_token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/expenses",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "expenses"
                            ]
                        }
                    }
                },
                {
                    "name": "Create Expense",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{auth_token}}",
                                "type": "text"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"amount\": 250.50,\n  \"description\": \"Lunch\",\n  \"envelope_id\": \"uuid-here\",\n  \"date\": \"2025-12-13\",\n  \"shop_name\": \"Restaurant\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/expenses",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "expenses"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Receipts",
            "item": [
                {
                    "name": "Scan Receipt",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{auth_token}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "receipt",
                                    "type": "file",
                                    "src": []
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/api/receipts/scan",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "receipts",
                                "scan"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Bills",
