                {
                    "name": "Get All Bills",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{auth_token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/bills",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "bills"
                            ]
                        }
                    }
                },
                {
                    "name": "Create Bill",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{auth_token}}",
                                "type": "text"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Netflix\",\n  \"amount\": 199,\n  \"due_date\": \"2025-12-25\",\n  \"category\": \"Subscription\",\n  \"month\": 12,\n  \"year\": 2025,\n  \"is_recurring\": true\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/bills",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "bills"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Reports",
            "item": [
                {
                    "name": "Get Weekly Report",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{auth_token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/reports/weekly?date=2025-12-13",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "reports",
                                "weekly"
                            ],
                            "query": [
                                {
                                    "key": "date",
                                    "value": "2025-12-13"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Monthly Report",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{auth_token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/reports/monthly?month=12&year=2025",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "reports",
                                "monthly"
                            ],
                            "query": [
                                {
                                    "key": "month",
                                    "value": "12"
                                },
                                {
                                    "key": "year",
                                    "value": "2025"
                                }
                            ]
                        }
                    }
                }
            ]
        }
    ]
}